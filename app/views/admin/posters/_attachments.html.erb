<div class="row">
  <fieldset class="col-12 col-md-6 mb-5">
    <legend>Front PDFs (for download)</legend>

    <div class="row">
      <div class="col-12 col-sm-6 mb-3">

        <div class="form-group">
          <div class="card">
            <div class="card-body">
              <%= form.label :image_front_color_download, "Color PDF" %>
              <%= form.file_field :image_front_color_download, class: "form-control-file", accept: "application/pdf" %>

              <% if resource.image_front_color_download.attached? %>
                <p><%= image_tag resource.image_front_color_download.preview(resize_to_limit: [@preview_width, @preview_width]), class: "mt-3 rounded d-block" %></p>
                <p><%#= image_tag url_for(image_variant_by_width(resource.image_front_color_download, @preview_width)), class: "mt-3 rounded d-block" %></p>
              <% end %>
            </div>
          </div>
        </div>

      </div>

      <div class="col-12 col-sm-6 mb-3">

        <div class="form-group">
          <div class="card">
            <div class="card-body">
              <%= form.label :image_front_black_and_white_download, "Black & White PDF" %>
              <%= form.file_field :image_front_black_and_white_download, class: "form-control-file", accept: "application/pdf" %>

              <% if resource.image_front_black_and_white_download.attached? %>
                <p><%= image_tag resource.image_front_black_and_white_download.preview(resize_to_limit: [@preview_width, @preview_width]), class: "mt-3 rounded d-block" %></p>
                <p><%#= image_tag url_for(image_variant_by_width(resource.image_front_black_and_white_download, @preview_width)), class: "mt-3 rounded d-block" %></p>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>

  </fieldset>

  <fieldset class="col-12 col-md-6 mb-5">
    <legend>Front Images (for display)</legend>

    <div class="row">
      <div class="col-12 col-sm-6 mb-3">

        <div class="form-group">
          <div class="card">
            <div class="card-body">
              <%= form.label :image_front_color_image, "Color Image" %>
              <%= form.file_field :image_front_color_image, class: "form-control-file", accept: "image/jpeg, image/png, image/gif" %>

              <% if resource.image_front_color_image.attached? %>
                <p><%#= image_tag resource.image_front_color_image.preview(resize_to_limit: [@preview_width, @preview_width]), class: "mt-3 rounded d-block" %></p>
                <p><%= image_tag url_for(image_variant_by_width(resource.image_front_color_image, @preview_width)), class: "mt-3 rounded d-block" %></p>
              <% end %>
            </div>
          </div>
        </div>

      </div>

      <div class="col-12 col-sm-6 mb-3">

        <div class="form-group">
          <div class="card">
            <div class="card-body">
              <%= form.label :image_front_black_and_white_image, "Black & White Image" %>
              <%= form.file_field :image_front_black_and_white_image, class: "form-control-file", accept: "image/jpeg, image/png, image/gif" %>

              <% if resource.image_front_black_and_white_image.attached? %>
                <p><%#= image_tag resource.image_front_black_and_white_image.preview(resize_to_limit: [@preview_width, @preview_width]), class: "mt-3 rounded d-block" %></p>
                <p><%= image_tag url_for(image_variant_by_width(resource.image_front_black_and_white_image, @preview_width)), class: "mt-3 rounded d-block" %></p>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>
  </fieldset>
</div><!-- .row -->
